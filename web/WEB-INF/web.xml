<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <servlet>
        <servlet-name>login</servlet-name>
        <servlet-class>paquete.login</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>registraAlumno</servlet-name>
        <servlet-class>paquete.registraAlumno</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>profesor</servlet-name>
        <servlet-class>paquete.profesor</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>verSolicitudes</servlet-name>
        <servlet-class>paquete.verSolicitudes</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>cambiaEstado</servlet-name>
        <servlet-class>paquete.cambiaEstado</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>logout</servlet-name>
        <servlet-class>paquete.logout</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>eligeAlumno</servlet-name>
        <servlet-class>paquete.eligeAlumno</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>modificarDatos</servlet-name>
        <servlet-class>paquete.modificarDatos</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>actualizar</servlet-name>
        <servlet-class>paquete.actualizar</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>login</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>registraAlumno</servlet-name>
        <url-pattern>/registraAlumno</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>profesor</servlet-name>
        <url-pattern>/profesor</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>verSolicitudes</servlet-name>
        <url-pattern>/verSolicitudes</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>cambiaEstado</servlet-name>
        <url-pattern>/cambiaEstado</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>logout</servlet-name>
        <url-pattern>/logout</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>eligeAlumno</servlet-name>
        <url-pattern>/eligeAlumno</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>modificarDatos</servlet-name>
        <url-pattern>/modificarDatos</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>actualizar</servlet-name>
        <url-pattern>/actualizar</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
</web-app>
